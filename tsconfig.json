{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "types": [
      "cypress",
      "node"
    ],
    "outDir": "dist",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "node_modules/cypress/types"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}
