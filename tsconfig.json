{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "cypress",
      "node"
    ],
    "outDir": "dist",
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "node_modules/cypress/types"
  ],
  "exclude": ["node_modules"]
}
