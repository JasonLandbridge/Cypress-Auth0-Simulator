{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "cypress",
      "node"
    ],
    "outDir": "dist",
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/cypress/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "node_modules/cypress/types"
  ],
}
